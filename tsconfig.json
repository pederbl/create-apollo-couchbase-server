{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "strict": true,
    "outDir": "dist",
    "declaration": true,
    "resolveJsonModule": true, 
    "skipLibCheck": true
  },
  "include": ["**/*.ts"],
  "exclude": ["templates", "node_modules", "**/*.test.ts", "dist"], 

}
